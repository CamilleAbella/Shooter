{
  "name": "shooter",
  "version": "0.1",
  "standard": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "scripts": {
    "bundle": "esbuild cache/index.js --target=chrome58,firefox57,safari11,edge16 --bundle --sourcemap --outfile=\"dist/bundle.js\"",
    "format": "standard --fix src/*.ts",
    "build": "tsc && npm run bundle",
    "start": "npm run build && serve dist/"
  },
  "devDependencies": {
    "@types/node": "^14.14.20",
    "@types/pixi.js": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "esbuild": "^0.8.31",
    "eslint-plugin-typescript": "^0.14.0",
    "serve": "^11.3.2",
    "standard": "^16.0.3",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "pixi.js": "^5.3.7"
  }
}
